= simple_form_for @post, :html => { :class => 'form-horizontal' } do |f|

  .form-inputs
    = f.input :title, :required => true, :input_html => { :class => "span6" }  
    = f.input :body, :required => false, :input_html => { :rows => 5, :class => "span6" } 
    = f.input :publish_date, :as => :date, :required => true, :input_html => { :class => "span2" }, :order => [:month, :day, :year]  
    = f.association :categories, :as => :check_boxes

  .form-actions
    = f.button :submit, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), posts_path, :class => 'btn'
